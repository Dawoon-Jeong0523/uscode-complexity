    label "section_2201_subsection_a_item_3_subitem_C"
    class_name "subitem"
    text "(C) to interact to a greater extent with individuals who do not have disabilities; and"
  ]
  node [
    id 10801
    label "section_2201_subsection_a_item_3_subitem_D"
